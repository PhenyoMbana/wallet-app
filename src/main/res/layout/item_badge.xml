<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:strokeColor="@color/blue_violet"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_badge_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardBackgroundColor="@color/sun_glare"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image_badge_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    app:tint="@color/darkest_hour"
                    tools:src="@drawable/ic_pie_chart" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_checkmark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                app:cardBackgroundColor="@color/exuberant_orange"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image_checkmark"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <TextView
            android:id="@+id/text_badge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/blue_violet"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Budget Pro" />

        <TextView
            android:id="@+id/text_badge_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            tools:text="Set up your first budget" />

        <TextView
            android:id="@+id/text_badge_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/exuberant_orange"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Earned on Mar 15, 2024" />

        <ProgressBar
            android:id="@+id/progress_badge"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="8dp"
            android:progress="80"
            android:progressTint="@color/blue_violet"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_badge_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="80% complete"
            tools:visibility="visible" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

